<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <h2>KAYIT <br><small>Turnuvaya katılım için kayıt zorunludur.</small></h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :full_name, placeholder: "Tam İsim", class: "form-control input-lg" %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :phone, placeholder: "Telefon: +90555XXXXXXX", class: "form-control input-lg" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.text_field :username, placeholder: "Kullanıcı Adı", class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, placeholder: "E-mail", class: "form-control input-lg" %>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.password_field :password, placeholder: "Şifre", class: "form-control input-lg" %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.password_field :password_confirmation, placeholder: "Şifre(tekrar)", class: "form-control input-lg" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12">
             <strong class="label label-primary">Kayıt</strong> tuşuna basarak, <a href="#" data-toggle="modal" data-target="#terms">Kullanım Kurallarını</a> kabul etmiş sayılırsın.
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-xs-4 col-md-4 col-xs-offset-4">
            <%= f.submit "Kaydolayım", class: "btn btn-default btn-primary btn-block btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>

<div class="modal fade" id="terms" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">Kullanım Kuralları</h4>
      </div>
      <div class="modal-body">
        natus odio reiciendis perferendis rem nisi tempore possimus ipsa porro delectus quidem dolorem ad.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-primary" data-dismiss="modal">Tamam tamam okudum kabul</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
